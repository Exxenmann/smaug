{
  "compileOnSave": false,
  "compilerOptions": {

    "baseUrl": "src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2015",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",

    "paths": {
      "@configs/*": ["./app/configs/*"],
      "@components/*": ["./app/components/*"],
      "@interfaces/*": ["./app/interfaces/*"],
      "@services/*": ["./app/services/*"],
      "@base/*": [".*"],
    },

    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  }
}
